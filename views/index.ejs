<style>
  /* General styles */
  body {
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(to bottom, #020024, #090979, #00d4ff);
      color: #fff;
      line-height: 1.6;
      padding-top: 60px;
      background-attachment: fixed;
  }
  
  /* Header */
  header {
      background-color: #343a40;
      color: #fff;
      padding: 20px 0;
      text-align: center;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
  }
  
  /* Container */
  .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
  }
  
  /* Featured blog post */
  .bg-body-secondary {
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }
  
  .display-4 {
      font-size: 2.5rem;
      font-weight: bold;
      color: #00d4ff;
  }
  
  .lead {
      font-size: 1.25rem;
      font-weight: 300;
  }
  
  /* Cards */
  .card {
      border: none;
      border-radius: 10px;
      overflow: hidden;
      transition: transform 0.2s;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }
  
  .card:hover {
      transform: scale(1.02);
  }
  
  .card-img {
      width: 100%;
      height: 200px;
      object-fit: cover;
  }
  
  .card-body {
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
      border-top: 4px solid #00d4ff;
  }
  
  /* Sidebar */
  .sidebar {
      position: sticky;
      top: 100px;
  }
  
  .sidebar .bg-body-tertiary {
      background-color: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }
  
  .sidebar h4 {
      font-size: 1.5rem;
      margin-bottom: 10px;
  }
  
  /* Links */
  a {
      color: #00d4ff;
      text-decoration: none;
  }
  
  a:hover {
      color: #1cc88a;
  }
  
  /* Footer */
  footer {
      background-color: #343a40;
      color: #fff;
      padding: 20px 0;
      text-align: center;
      margin-top: 40px;
  }
  
  /* Additional styles for night sky */
  body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('https://www.transparenttextures.com/patterns/stardust.png'), linear-gradient(to bottom, #020024, #090979, #00d4ff);
      z-index: -1;
      opacity: 0.8;
  }
  </style>

