<%- include("partials/header.ejs") %>

<style>
/* General styles */
body {
    font-family: 'Roboto', sans-serif;
    background: linear-gradient(to bottom, #020024, #090979, #00d4ff);
    color: #fff;
    line-height: 1.6;
    padding-top: 60px;
    background-attachment: fixed;
}

/* Header */
header {
    background-color: #343a40;
    color: #fff;
    padding: 20px 0;
    text-align: center;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

/* Container */
.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
}

/* Blog Card */
.col-md-8 {
    margin-top: 20px;
}

.row.g-0 {
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    background: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    transition: box-shadow 0.3s, transform 0.3s;
}

.row.g-0:hover {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.7);
    transform: translateY(-5px);
}

.col p {
    color: #ccc;
}

strong {
    color: #00d4ff;
}

h3 {
    color: #fff;
    margin-bottom: 10px;
}

.text-body-secondary {
    color: rgba(255, 255, 255, 0.6);
}

.btn-dark {
    background-color: #00d4ff !important;
    border: none;
    border-radius: 5px;
    padding: 10px;
    font-size: 16px;
    font-weight: bold;
    transition: background-color 0.3s, transform 0.3s;
}

.btn-dark:hover {
    background-color: #1cc88a !important;
    transform: scale(1.05);
}

.btn-dark a {
    color: #fff !important;
    text-decoration: none;
}

/* Additional styles for night sky */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://www.transparenttextures.com/patterns/stardust.png'), linear-gradient(to bottom, #020024, #090979, #00d4ff);
    z-index: -1;
    opacity: 0.8;
}

/* No post message */
h1.no-post {
    color: #fff;
    text-align: center;
    margin-top: 80px;
    margin-left: 10px;
}
</style>

<% if(locals.posts && posts.length > 0) { %>
  <div class="container" style="margin-top: 100px">
    <% posts.forEach((post, index) => { %>
      <div class="col-md-8" style="margin-top: 20px;">
        <div class="col-md-10">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary-emphasis"><%= post.topicname %></strong>
              <h3 class="mb-0"><%= post.subject %></h3>
              <div class="mb-1 text-body-white"><%= new Date().getHours()%>-<%= new Date().getMinutes()%></div>
              <div class="mb-1 text-body-white"><%= new Date().getDate() %>-<%= new Date().getMonth()+1 %>-<%= new Date().getFullYear() %></div>
              <p class="card-text mb-auto"><%= post.content %></p>
            </div>
          </div>
        </div>
      </div>   
      <div class="d-grid gap-2 d-md-flex justify-content-md-start" style="margin-top: 10px;">
        <button type="button" class="btn btn-dark btn-md px-4 me-md-2"><a href="/editpost/<%= index %>" class="nav-link px-2 text-white">Edit</a></button>
        <button type="button" class="btn btn-dark btn-md px-4 me-md-2"><a href="/deletepost/<%= index %>" class="nav-link px-2 text-white">Delete</a></button>
      </div>
    <% }) %>
  </div>  
<% } else { %>
     <h1 class="h3 mb-3 fw-normal no-post">No post yet</h1>
<% } %>


