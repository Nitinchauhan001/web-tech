<%- include("partials/header.ejs") %>

<style>
/* General styles */
body {
    font-family: 'Roboto', sans-serif;
    background: linear-gradient(to bottom, #020024, #090979, #00d4ff);
    color: #fff;
    line-height: 1.6;
    padding-top: 60px;
    background-attachment: fixed;
}

/* Header */
header {
    background-color: #343a40;
    color: #fff;
    padding: 20px 0;
    text-align: center;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

/* Container */
.container {
    max-width: 400px;
    margin: 0 auto;
    padding: 40px 20px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

/* Form */
form {
    display: flex;
    flex-direction: column;
}

form .form-group {
    margin-bottom: 20px;
}

form .form-group label {
    margin-bottom: 5px;
    font-weight: bold;
    color: #00d4ff;
}

form .form-group input {
    padding: 10px;
    border: none;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
}

form .form-group input::placeholder {
    color: rgba(255, 255, 255, 0.7);
}

form button {
    padding: 10px;
    border: none;
    border-radius: 5px;
    background: #00d4ff;
    color: #fff;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s;
}

form button:hover {
    background: #1cc88a;
}

/* Links */
a {
    color: #00d4ff;
    text-decoration: none;
}

a:hover {
    color: #1cc88a;
}

/* Footer */
footer {
    background-color: #343a40;
    color: #fff;
    padding: 20px 0;
    text-align: center;
    margin-top: 40px;
}

/* Additional styles for night sky */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://www.transparenttextures.com/patterns/stardust.png'), linear-gradient(to bottom, #020024, #090979, #00d4ff);
    z-index: -1;
    opacity: 0.8;
}

/* Specific styles for this form */
.container h1 {
    color: #00d4ff;
    margin-bottom: 20px;
    text-align: center;
}

.form-floating input {
    background: rgba(255, 255, 255, 0.1) !important;
    color: #fff !important;
}

.form-floating label {
    color: rgba(255, 255, 255, 0.7) !important;
}

.btn-dark {
    background-color: #00d4ff !important;
    border: none;
    transition: background 0.3s;
}

.btn-dark:hover {
    background-color: #1cc88a !important;
}

.form-check-label {
    color: #00d4ff;
}

.form-check-input:checked {
    background-color: #00d4ff;
    border-color: #00d4ff;
}

.form-check-input:focus {
    box-shadow: 0 0 0 0.2rem rgba(0, 212, 255, 0.25);
}
</style>

<div class="container" style="margin-top: 100px;">
  <form action="/user" method="post">
    <h1 class="h3 mb-3 fw-normal">Create your Account</h1>
    <div class="form-floating">
        <input type="text" name="username" class="form-control" id="floatingUsername" placeholder="name">
        <label for="floatingInput">Enter your name</label>
    </div>
    <div class="form-floating">
        <input type="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
    </div>

    <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
        Remember me
        </label>
    </div>
    <button class="btn btn-dark w-100 py-2" type="submit">Sign in</button>
  </form>
</div>

